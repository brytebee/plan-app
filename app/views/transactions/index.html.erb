<h1>Transactions</h1>

<div id="transactions">
  <% @transactions.each do |transaction| %>
  <% if can? :read, transaction %>
    <%= render transaction %>
    <p>
      <%= link_to "Show this transaction", transaction %>
    </p>
  <% end %>
  <% end %>
</div>

<%= link_to "New transaction", new_transaction_path %>

<p style="color: green"><%= notice %></p>
<p style="color: red"><%= flash[:alert] %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <% if can? :read, category %>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category %>
      </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>

<p style="color: green"><%= notice %></p>
<p style="color: red"><%= flash[:alert] %></p>

<div id="categories">
  <% @categories.each do |category| %>
    <% if can? :read, category %>
      <%= link_to category do %>
        <div class="card-1">
          <%= render category %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
<%= link_to "New transaction", new_transaction_path %>

<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <% if can? :update, @category %>
    <%= link_to "Edit this category", edit_category_path(@category) %> |
  <% end %>

  <%= link_to "Back to categories", categories_path %>

  <% if can? :destroy, @category %>
    <%= button_to "Destroy this category", @category, method: :delete %>
  <% end %>
</div>

<div>
  <% if @category.transactions.empty? %>
    <p>Add some transactions. There's none yet!</p>
  <% else %>
    <% @category.transactions.each do |transaction| %>
      <%= render transaction %>
    <% end %>
  <% end %>
  <%= link_to 'Add new transaction', new_transaction_path %>
</div>
